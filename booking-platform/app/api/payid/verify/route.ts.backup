import { NextRequest, NextResponse } from 'next/server';
import { createClient } from '@/lib/supabase/server';
import { createServiceClient } from '@/lib/supabase/server';
import { verifyPaymentSchema } from '@/lib/validators';
import { logAction, AuditActions, getRequestMetadata } from '@/lib/audit';
import { notifyClientPaymentVerified, notifyPerformerBookingConfirmed } from '@/lib/whatsapp';
import { formatPhoneForWhatsApp, formatDateAU } from '@/lib/utils';

/**
 * POST /api/payid/verify
 * Admin verifies or rejects a PayID payment
 */
export async function POST(request: NextRequest) {
  try {
    const supabase = await createClient();
    const serviceClient = createServiceClient();

    // Get current user
    const {
      data: { user },
      error: authError,
    } = await supabase.auth.getUser();

    if (authError || !user) {
      return NextResponse.json({ error: 'Unauthorized' }, { status: 401 });
    }

    // Get user role from auth metadata
    const userRole = user.user_metadata?.role || user.app_metadata?.role;

    if (userRole !== 'admin') {
      return NextResponse.json({ error: 'Only admins can verify payments' }, { status: 403 });
    }

    // Parse and validate request body
    const body = await request.json();
    const validationResult = verifyPaymentSchema.safeParse(body);

    if (!validationResult.success) {
      return NextResponse.json(
        { error: 'Invalid input', details: validationResult.error.errors },
        { status: 400 }
      );
    }

    const data = validationResult.data;

    // Get booking with client and performer details
    const { data: booking, error: bookingError } = await serviceClient
      .from('bookings')
      .select(`
        *,
        client:users!client_id(*),
        performer:users!performer_id(*)
      `)
      .eq('id', data.booking_id)
      .single();

    if (bookingError || !booking) {
      return NextResponse.json({ error: 'Booking not found' }, { status: 404 });
    }

    // Check if booking is in correct status
    if (booking.payment_status !== 'pending') {
      return NextResponse.json(
        { error: 'Payment has already been processed' },
        { status: 400 }
      );
    }

    // Update booking based on verification status
    const updates: any = {
      payment_status: data.status,
      payment_verified_at: new Date().toISOString(),
      payment_verified_by: user.id,
    };

    if (data.status === 'verified') {
      updates.status = 'confirmed';
    } else if (data.status === 'rejected') {
      updates.status = 'cancelled';
      updates.cancelled_at = new Date().toISOString();
      updates.cancellation_reason = data.rejection_reason || 'Payment rejected';
    }

    const { data: updatedBooking, error: updateError } = await serviceClient
      .from('bookings')
      .update(updates)
      .eq('id', data.booking_id)
      .select()
      .single();

    if (updateError) {
      console.error('Booking update error:', updateError);
      return NextResponse.json({ error: 'Failed to update booking' }, { status: 500 });
    }

    // Log the action
    const metadata = getRequestMetadata(request.headers);
    await logAction({
      user_id: user.id,
      action: data.status === 'verified'
        ? AuditActions.PAYMENT_VERIFIED
        : AuditActions.PAYMENT_REJECTED,
      resource_type: 'booking',
      resource_id: data.booking_id,
      details: {
        booking_number: booking.booking_number,
        status: data.status,
        rejection_reason: data.rejection_reason,
      },
      ...metadata,
    });

    // Send notifications
    const notificationErrors: string[] = [];

    if (data.status === 'verified') {
      // Notify client
      if (booking.client && booking.client.phone) {
        try {
          const clientPhone = formatPhoneForWhatsApp(booking.client.phone);
          await notifyClientPaymentVerified(clientPhone, booking.booking_number);
        } catch (error) {
          console.error('Failed to send client notification:', error);
          notificationErrors.push('client');
        }
      }

      // Notify performer
      if (booking.performer && booking.performer.phone) {
        try {
          const performerPhone = formatPhoneForWhatsApp(booking.performer.phone);
          const eventDate = formatDateAU(booking.event_date, 'PP');
          const eventTime = booking.event_start_time;
          await notifyPerformerBookingConfirmed(
            performerPhone,
            booking.booking_number,
            eventDate,
            eventTime
          );
        } catch (error) {
          console.error('Failed to send performer notification:', error);
          notificationErrors.push('performer');
        }
      }
    }

    return NextResponse.json({
      booking: updatedBooking,
      notifications: {
        sent: notificationErrors.length === 0,
        failed: notificationErrors,
      },
    });
  } catch (error) {
    console.error('Payment verification exception:', error);
    return NextResponse.json({ error: 'Internal server error' }, { status: 500 });
  }
}
