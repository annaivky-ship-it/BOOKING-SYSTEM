{
  "name": "flavor-entertainers-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready backend for Flavor Entertainers booking platform",
  "main": "apps/api/dist/index.js",
  "scripts": {
    "build": "pnpm --filter='@flavor-entertainers/*' build",
    "dev": "pnpm --filter=api dev",
    "start": "pnpm --filter=api start",
    "test": "pnpm --recursive test",
    "test:watch": "pnpm --recursive test:watch",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "typecheck": "pnpm --recursive typecheck",
    "db:migrate": "cd db && node -r esbuild-register migrations/run.ts",
    "db:seed": "cd db && node -r esbuild-register seed/run.ts",
    "postinstall": "pnpm build"
  },
  "keywords": ["entertainment", "booking", "backend", "fastify", "supabase"],
  "author": "Flavor Entertainers",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/node": "^20.14.0",
    "esbuild": "^0.21.0",
    "esbuild-register": "^3.5.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}